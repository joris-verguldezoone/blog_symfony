{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block body %}
	{{ form_start(form) }}
	{{ form_row(form.user_name, {'label': 'Nom d\'utilisateur', 'attr':
    {'placeholder': 'Nom d\'utilisateur...'}}) }}
	{{ form_row(form.email, {'label': 'Adresse email', 'attr': 
    {'placeholder': 'Adresse email'}}) }}
	{{ form_row(form.password, {'label': 'Mot de passe', 'attr': 
    {'placeholder': 'Mot de passe'}}) }}
	{{ form_row(form.confirm_password,  {'label': 'Confirmer Mot de passe', 'attr': 
    {'placeholder': 'Confirmer Mot de passe'}}) }}
	<button type="submit" class="btn btn-success">Inscription</button>

	{{ form_end(form) }}

{% endblock %}
