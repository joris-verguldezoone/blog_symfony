<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																																																		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link
			rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
		{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>

	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{ path('home') }}">Phonk]Store</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link" href="{{ path('articles') }}">Articles</a>
					</li>
					{% if app.user ? app.user.email %}
						{% if app.user.email is same as('admin@admin.com') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('blog_create') }}">Créer un article</a>
							</li>
						{% endif %}
					{% endif %}
					{% if not app.user %}
						<li class="nav-item">
							<a href=" {{ path('security_registration') }}" class="nav-link">Inscription</a>
						</li>
						<li class="nav-item">
							<a href=" {{ path('security_login') }}" class="nav-link">Connexion</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a href=" {{ path('security_logout') }}" class="nav-link">Déconnexion</a>
						</li>
					{% endif %}
				</ul>
				<form class="form-inline my-2 my-lg-0" action="{{ path('selected_articles') }}" method="GET">
					<input class="form-control mr-sm-2" id="searchKeyWord" name="searchKeyWord" type="text" placeholder="Search">
					<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
				</form>
			</div>
		</nav>
		<div class="container">
			{% block body %}
			</div>


		{% endblock %}
	</body>
</html></body></html></body></html></body></html>
